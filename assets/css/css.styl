---

// Colours
$main-colour = #6600ff
$background-colour = #4400aa
$grey-colour = #f0f0fa

// Column size
$column = 12rem

// Bold font weight
$bold-weight = 600

// Icon font
@import "glyphter-font/css/genderkit-icons.css"

// Main body font
@font-face {
  font-family: 'overpass';
  src: url('{{ site.baseurl }}/assets/fonts/overpass-light.eot');
  src: url('{{ site.baseurl }}/assets/fonts/overpass-light.eot?#iefix') format('embedded-opentype'),
       url('{{ site.baseurl }}/assets/fonts/overpass-light.woff2') format('woff2'),
       url('{{ site.baseurl }}/assets/fonts/overpass-light.woff') format('woff'),
       url('{{ site.baseurl }}/assets/fonts/overpass-light.ttf')  format('truetype');
       font-weight: 400;
       font-style: normal;
}
@font-face {
  font-family: 'overpass';
  src: url('{{ site.baseurl }}/assets/fonts/overpass-semibold.eot');
  src: url('{{ site.baseurl }}/assets/fonts/overpass-semibold.eot?#iefix') format('embedded-opentype'),
       url('{{ site.baseurl }}/assets/fonts/overpass-semibold.woff2') format('woff2'),
       url('{{ site.baseurl }}/assets/fonts/overpass-semibold.woff') format('woff'),
       url('{{ site.baseurl }}/assets/fonts/overpass-semibold.ttf')  format('truetype');
       font-weight: 600;
       font-style: normal;
}

// Use bold rather than italics
em
  font-style normal
  font-weight 600

// Basic utility classes
.hidden
  display none

// Basic html styling
html
  line-height 1.5
  font-family Overpass, Calibri, sans-serif
body
  margin 0
  word-break break-word // force wrapping on words > screen width
h1, h2
  color white
  margin 0
  padding 1rem
  line-height 1.25
h1
  display flex
  flex-direction column
  background-color black
  img
    width 10rem
h2
  background-color $background-colour
  letter-spacing -0.05rem
a
  color $main-colour
  text-decoration none
  cursor pointer
main
  display flex
  flex-direction column
figure
  margin -1rem // nasty hack
img
  width 100%
  display block
h3
  margin-top 0
section, footer, .greybox
  padding 1rem
  margin 0

// Remove default UL styling on most lists  
nav ul, .wordcloud, .gridcontainer, .griditem ul, .cards, .links, .details, .articles, .effects, #effectslist, #categorylist
  padding 0
  margin 0
  li
    list-style-type none
    a
      text-decoration none

// Lists where we want to squish the text together
// to make list items more visually obvious 
.articles, .effects, #effectslist, .details
  display flex
  flex-direction column
  img
    display none
  h3, p
    font-size 1rem
    margin 0
  li
    margin-bottom 1rem
  li:last-child
    margin-bottom 0
    
.articles, .effects, #effectslist
  line-height 1.25

// Index pages
.accordionButton
  display block 
  // Make the accordion link take up the full size of its container
  // this makes much more sense on mobile

// Category pages
// Hack to make last row align left
.placeholder
  min-height 0 !important
  max-height 0 !important
  margin 0 !important

// Explore pages
.wordcloud
  display flex
  flex-direction row
  flex-wrap wrap
  align-items center
  justify-content space-between
  margin 1rem 0.5rem
  padding 0
  li
    padding 0 0.5rem 0 0.5rem

// Article pages
.effects, #effectslist
  margin-top 1rem
  li
    padding-left 4rem
    min-height 3rem
  i // Icons to represent body parts etc.
    display block
    color black
    line-height 1
    font-size 3rem
    width 3rem
    height 3rem
    margin-bottom -3rem
    margin-left -4rem

// Video utility classes
.videoEmbedWrapper
  position relative
  padding-bottom 56.25%
  height 0
.videoEmbedWrapper iframe
    position absolute
    top 0
    left 0
    width 100%
    height 100%

// Front page
.homescreen
  font-size 1.25rem
  header
    background-image url('{{ site.baseurl }}/assets/images/test.jpg')
    background-repeat no-repeat
    background-color black
    background-position 50% -5rem
    background-size 20rem 20rem
    text-align center
    padding-bottom 1px !important // horrible hack
    h1
      flex-direction row
      justify-content center
      height auto
      width auto
    h1, h2
      background none
      img
        width 14rem  
  header, section
    margin-bottom 2rem
    padding 0
  .greybox h3
    background #445
    color white
    padding 1rem
    margin 0
#effectslist
  padding 1rem
.cards
  display flex
  flex-direction column
  font-size 1.25rem
  font-weight $bold-weight
  li
    height 3rem
    margin 0 0 .5rem 0
    background-color $background-colour
    background-image url('{{ site.baseurl }}/assets/images/whiteraquo.png')
    background-position 100% 50%
    background-size 4rem
    background-repeat no-repeat
    a
      color white
      height 100%
      padding 0 1rem
      display flex
      align-items center
      justify-content space-between
.raquo
  font-size 3rem
  overflow hidden
    
// Visual styling
nav, aside, .warning, .attention
  h3, p
    margin 0
nav, aside, footer, .greybox
  background $grey-colour
nav, aside, .attention
  padding 1rem
.attention
  background #ffffee
  border-style none none none solid
  border-image linear-gradient(to bottom, #fe0 0%, #fc0 15%, #f90 65%, #e40 100%) 10
  border-width 0 0 0 4px
  border-left 4px solid #f90
.button
  display block
  width 10rem
  background-color #f80
  background linear-gradient(to bottom, #fe0 0%, #fc0 15%, #f90 65%, #e40 100%)
  padding 1rem
  margin 1rem auto
  font-weight $bold-weight
  color black
.grouping 
  padding 0 0 1rem 0
.warning
  border-left 2px red solid 
  padding 0 0 0 1rem
.gridcontainer li
  width $column
  h3
    margin 0
.griditem
  margin-bottom 1rem
  
// Checklists
.checklist
  padding 0
  list-style-type none
  display flex
  flex-direction row
  flex-wrap wrap
  justify-content space-between
  li
    padding 0.5rem 0    
    width $column
    max-width $column
  input[type=checkbox]
    position absolute
    overflow hidden
    clip rect(0 0 0 0)
    height 1px
    width 1px
    margin -1px
    padding 0px
    border 0
  input[type=checkbox]+label::before
    content "\2718"
    color #e0e0e0
    width 2em
    height 2em
    font-weight bold
    font-family sans
    display flex
    align-items center
    justify-content center
    border 2px solid $main-colour
    margin-right 16px
    flex-shrink 0
  input[type=checkbox]:checked+label::before
    content "\2714"
    color #444
  input[type=checkbox]:hover+label::before
    background-color $main-colour + 95%
  input[type=checkbox]+label
    line-height 1.25
    height 2em
    display flex
    align-items center
    cursor pointer
    opacity 1
    text-align left

// Horrible special cases to make things look nicer
#effectslist
  margin-top 0
#effectslist i
  margin-bottom -2rem

// Responsive page size changing
@media screen and (min-width: 620px)
  body
    max-width 40rem
    margin 0 auto
@media screen and (min-width: 920px)
  body
    max-width 54rem

// Change page look based on width
@media screen and (min-width: 620px)
  h1
    width 10rem
    height 7rem
    margin-bottom 2rem
    justify-content flex-end
  h2
    background none
    color black
    font-size 2rem
    padding 0 0 0.5rem 0
    border-bottom 4px solid #f80
  .homescreen h2
    color white
    padding 0
    border none
    font-size 1.5rem
  main
    flex-direction row
  figure
    margin 0
    img
      width 12rem
      height 9rem
  aside, nav
    background none
    margin-right 2rem
    min-width $column
    max-width $column
    padding 0
  article
    padding 0
  section, footer
    padding 0
    margin 1rem 0 0 0
  header
    margin-bottom 2rem
  footer
    padding 1rem
  section:first-child
    margin-top 0
  .articles
    flex-direction row
    flex-wrap wrap
    justify-content space-between
    img
      display block
    li
      width $column
      min-height 15rem
      img
        width $column
        height 9rem
        margin-bottom 1rem
  .cards
    flex-direction row
    li
      flex-grow 1
      height 4rem
      margin 0 .25rem 0 0 
    li:last-child
      margin 0
  #effectslist
    flex-direction row
    flex-wrap wrap
    justify-content space-around
    text-align center
    li
      flex-direction column
      width 8rem
      margin 1rem
      padding 1rem
      background white
      border-radius 1rem
    li:last-child
      margin 1rem
    i
      font-size 3rem
      margin 0 auto 1rem auto
  #effectslist:after // Hack to push the last few items over to the left
    content ""
    flex auto
    max-width 25rem
    min-width 25rem
  .wordcloud
    margin-left -.5rem
    margin-right -.5rem
  .gridcontainer
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content space-between
